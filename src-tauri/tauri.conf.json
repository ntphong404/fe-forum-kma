{
  "productName": "Forum KMA",
  "version": "0.1.0",
  "identifier": "com.kma.forum",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Forum KMA",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../assets/icon.png",
      "../assets/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "KMA Students",
    "category": "Productivity",
    "shortDescription": "KMA Forum Application",
    "longDescription": "A forum application for KMA community"
  }
}
